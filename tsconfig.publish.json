{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": false,
    "noEmitHelpers": false,
    "noImplicitAny": true,
    "declaration": true,
    "skipLibCheck": true,
    "stripInternal": true,
    "lib": ["dom", "es6"]
  },
  "exclude": [
    "node_modules"
  ],
  "files": [
    "./ng2-file-tree.ts",
    "./typings/index.d.ts"
  ],
  "angularCompilerOptions": {
    "genDir": "factories"
  }
}
